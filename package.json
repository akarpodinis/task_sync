{
	"name": "tasksync",
	"displayName": "TaskSync",
	"description": "Sync VSCode tasks over Google Drive",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.35.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:extension.helloWorld",
		"onCommand:extension.configureCloudFolder"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "extension.helloWorld",
				"title": "Hello World"
			},
			{
				"command": "extension.configureCloudFolder",
				"title": "Configure cloud folder"
			}
		],
		"configuration":[
			{
				"type": "object",
				"title": "Tasksync configuration",
				"properties": {
					"tasksync.cloudDriveFolderLocation": {
						"type": "string",
						"default": false,
						"description": "Cloud syncing service folder location"
					}
				}
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"postinstall": "node ./node_modules/vscode/bin/install",
		"test": "npm run compile && node ./node_modules/vscode/bin/test"
	},
	"devDependencies": {
		"typescript": "^3.3.1",
		"vscode": "^1.1.28",
		"tslint": "^5.12.1",
		"@types/node": "^10.12.21",
		"@types/mocha": "^2.2.42"
	}
}
